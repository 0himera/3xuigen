# API Configuration
PORT=8000

# Server information for client configs
SERVER_ADDRESS=example.com
SERVER_NAME=MyConfigGenerator

# 3xui API Configuration
# URL for connecting to 3xui, should include protocol (http:// or https://)
# If using a tunnel, specify tunnel URL, e.g., http://localhost:9000 
XUI_BASE_URL=http://localhost:8080

# Credentials for 3xui panel login
XUI_USERNAME=admin
XUI_PASSWORD=your_secure_password

# Connection timeout in seconds
XUI_TIMEOUT=30

# SSH Configuration for VDS
SSH_HOST=your_server_ip
SSH_PORT=22
SSH_USERNAME=root
SSH_PASSWORD=your_secure_ssh_password
SSH_TIMEOUT=10 